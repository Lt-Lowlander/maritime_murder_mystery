<!DOCTYPE html>
<html>
<head>
  <title>Mur Maid</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous">

  <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= favicon_link_tag 'helm_wheel.svg' %>

  <%= csrf_meta_tags %>
</head>
<body>

  <nav id="navbar" class="top-bar">
    <ul class="event-hud">
      <li>
        <ul class="mystery-console">
          <li class="party-hud">
            <a href="/party"><i class="fas fa-book-dead"></i></a>
          </li>
          <li class="rules-hud">
            <a href="/rules"><i class="fas fa-anchor"></i></a>
          </li>
          <li class="factions-hud">
            <a href="/factions"><i class="fas fa-address-book"></i></a>
          </li>
        </ul>
      </li>
      <li>
        <ul class="character-console">
          <%- if current_user -%>
          <li class="origin-story-hud">
            <a href="/users/<%=current_user.id%>/story"><i class="fas fa-scroll"></i></a>
          </li>
          <li class="goals-hud">
            <a href="/users/<%=current_user.id%>/goals"><i class="fas fa-tasks"></i></a>
          </li>
          <li class="secrets-hud">
            <a href="/users/<%=current_user.id%>/secrets"><i class="far fa-eye"></i></a>
          </li>
          <li class="connections-hud">
            <a href="/users/<%=current_user.id%>/connections"><i class="fas fa-users"></i></a>
          </li>
          <li class="abilities-hud">
            <a href="/users/<%=current_user.id%>/abilities"><i class="fas fa-wind"></i></a>
          </li>
          <li class="notes-hud">
            <a href="/users/<%=current_user.id%>/notes"><i class="fas fa-search"></i></a>
          </li>
          <%- end -%>
        </ul>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <%- if current_user -%>
          <li>
            <a href="/users/<%=current_user.id%>">
              <i class="fas fa-user-circle"></i>
            </a>
            <div class="sign-out">
              <%= link_to '<span class="veiled">|</span><i class="fas fa-sign-out-alt"></i>'.html_safe, destroy_user_session_path, method: :delete %>
            </div>
          </li>
        <%- else -%>
          <li><%= link_to '<span class="veiled">|</span><i class="fas fa-ship"></i>'.html_safe, user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <div id="flash-messages">
    <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
    <%- end -%>
  </div>

  <%= yield %>

  <%= javascript_include_tag 'application' %>

  <%- if Rails.env.development? || Rails.env.test? -%>
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>

  <%= yield :extra_footer %>
</body>
</html>
